@model IEnumerable<BCPA_OTS.Models.Event>
@{
    ViewBag.Title = "Home Page";
    int colNo = 0;
}

<header class="jumbotron">
    <h1>Bucks Center <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Performing Arts</h1>
    <h2>List of Forthcoming Events</h2>
</header>

<main class="row">

    @foreach (var show in Model)
    {

        if (colNo > 0 && colNo % 2 == 0)
        {
            @:</main><main class="row">
        }

        <div class="col-lg-6">
            <article class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="text-center">
                        <a href="ShowDetails/@show.EventID">
                            @show.Name
                        </a>
                    </h2>
                </div>
                <div class="panel-body">
                    @{
                        <img class="img-responsive" src="~/Images/@show.ImageURL" alt="Image of Show" />
                     }
                    <br />
                    <p>
                        @show.Description
                    </p>
                    <p class="text-center">
                        <strong>Starts: @show.StartDateTime.ToLongDateString()</strong>
                    </p>
                 </div>
            </article>
        </div>

        colNo++;
    }

</main>
